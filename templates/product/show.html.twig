<!DOCTYPE html>

<title>Product</title>

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ product.slug }}</td>
            </tr>
            <tr>
                <th>Sku</th>
                <td>{{ product.sku }}</td>
            </tr>
            <tr>
                <th>On_sale</th>
                <td>{{ product.onSale ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_in_stock</th>
                <td>{{ product.isInStock ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Is_decomposable</th>
                <td>{{ product.isDecomposable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>StockQuantity</th>
                <td>{{ product.stockQuantity }}</td>
            </tr>
            <tr>
                <th>SalePrice</th>
                <td>{{ product.salePrice }}</td>
            </tr>
            <tr>
                <th>MinQuantitySale</th>
                <td>{{ product.minQuantitySale }}</td>
            </tr>
            <tr>
                <th>MaxQuantitySale</th>
                <td>{{ product.maxQuantitySale }}</td>
            </tr>
            <tr>
                <th>RegularPrice</th>
                <td>{{ product.regularPrice }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
