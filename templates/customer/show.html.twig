{% block title %}Customer{% endblock %}

{% block body %}
    <h1>Customer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ customer.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ customer.createdAt ? customer.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ customer.updatedAt ? customer.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Dateborn</th>
                <td>{{ customer.dateborn ? customer.dateborn|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Lieunaissance</th>
                <td>{{ customer.lieunaissance }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ customer.sexe }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ customer.adresse }}</td>
            </tr>
            <tr>
                <th>ImageFilename</th>
                <td>{{ customer.imageFilename }}</td>
